<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<OutputType>WinExe</OutputType>
		<TargetFramework>net6.0-windows</TargetFramework>
		<RootNamespace>Honoo.MangaPack</RootNamespace>
		<Nullable>enable</Nullable>
		<UseWPF>true</UseWPF>
		<Title>Honoo Manga Pack</Title>
		<Authors>Loki Honoo</Authors>
		<Company>Loki Honoo</Company>
		<Copyright>Copyright (C) Loki Honoo 2023. All rights reserved.</Copyright>
		<AssemblyName>MangaPack</AssemblyName>
		<ApplicationIcon>Assets\yoriko18.ico</ApplicationIcon>
	</PropertyGroup>

	<ItemGroup>
	  <None Remove="Assets\Fonts\LESLIE.TTF" />
	  <None Remove="Assets\yoriko18.ico" />
	</ItemGroup>

	<ItemGroup>
	  <Content Include="Assets\yoriko18.ico" />
	</ItemGroup>
	
	<ItemGroup>
		<PackageReference Include="CommunityToolkit.Mvvm" Version="8.2.1" />
		<PackageReference Include="HandyControls" Version="3.4.5" />
		<PackageReference Include="Honoo.Configuration.ConfigurationManager" Version="1.3.0" />
		<PackageReference Include="itext7" Version="8.0.0" />
		<PackageReference Include="JerryShaw.AduSkin" Version="1.1.1.10" />
		<PackageReference Include="Microsoft.VisualBasic" Version="10.3.0" />
		<PackageReference Include="Microsoft.Xaml.Behaviors.Wpf" Version="1.1.39" />
		<PackageReference Include="SharpCompress" Version="0.33.0" />
	</ItemGroup>
	
	<ItemGroup>
	  <Resource Include="Assets\Fonts\LESLIE.TTF" />
	  <Resource Include="Assets\yoriko18.ico" />
	</ItemGroup>

</Project>
