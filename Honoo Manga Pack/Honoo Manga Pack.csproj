<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net6.0-windows</TargetFramework>
    <RootNamespace>Honoo.MangaPack</RootNamespace>
    <Nullable>enable</Nullable>
    <UseWPF>true</UseWPF>
    <Title>Honoo Manga Pack</Title>
    <ApplicationIcon>Assets\yoriko18.ico</ApplicationIcon>
	<Authors>Loki Honoo</Authors>
	<Company>Loki Honoo</Company>
	<Copyright>Copyright (C) Loki Honoo 2020. All rights reserved.</Copyright>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="Assets\yoriko18.ico" />
  </ItemGroup>

  <ItemGroup>
    <Resource Include="Assets\yoriko18.ico" />
  </ItemGroup>

  <ItemGroup>
    <Resource Include="Assets\Fonts\LESLIE.TTF" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="CommunityToolkit.Mvvm" Version="8.2.1" />
    <PackageReference Include="HandyControl" Version="3.4.0" />
    <PackageReference Include="Microsoft.VisualBasic" Version="10.3.0" />
    <PackageReference Include="Microsoft.Xaml.Behaviors.Wpf" Version="1.1.39" />
    <PackageReference Include="SharpCompress" Version="0.33.0" />
  </ItemGroup>

  <ItemGroup>
    <Compile Update="Properties\Settings.Designer.cs">
      <DesignTimeSharedInput>True</DesignTimeSharedInput>
      <AutoGen>True</AutoGen>
      <DependentUpon>Settings.settings</DependentUpon>
    </Compile>
  </ItemGroup>

  <ItemGroup>
    <None Update="Properties\Settings.settings">
      <Generator>SettingsSingleFileGenerator</Generator>
      <LastGenOutput>Settings.Designer.cs</LastGenOutput>
    </None>
  </ItemGroup>

</Project>
