<Application
    x:Class="Honoo.MangaPack.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/Themes/Theme.xaml" />
                <ResourceDictionary Source="pack://application:,,,/Themes/Button.xaml" />
                <ResourceDictionary Source="pack://application:,,,/Themes/ToggleButton.xaml" />
                <ResourceDictionary Source="pack://application:,,,/Themes/ProgressBar.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <FontFamily x:Key="LESLIEFont">pack://application:,,,/Resources/#LESLIE</FontFamily>
        </ResourceDictionary>
    </Application.Resources>
</Application>
