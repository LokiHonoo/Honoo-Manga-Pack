<Application x:Class="Honoo.MangaPack.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:hui="https://github.com/lokihonoo/honooui.wpf"
             xmlns:local="clr-namespace:Honoo.MangaPack"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!--  Includes this for Visual Studio Intellisense.  -->
                <ResourceDictionary Source="pack://application:,,,/HonooUI.WPF;component/Themes/Design.xaml" />

                <!--  Theme Settings.  -->
                <hui:Theme AccentColor="RoyalBlue"
                           AccentTextColor="White"
                           FieldSize="Standard"
                           StressColor="Gold"
                           StressTextColor="Black"
                           ThemeName="Light" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
